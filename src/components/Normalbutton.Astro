---
const { variant } = Astro.props;
---

<!-- VÃ¦lg mellem primary eller secondary variant -->
<button class={variant}>
  <slot />
</button>

<style>
  .primary {
    width: 16.875rem;
    border-style: solid;
    border-width: 1px;
    border-color: #fff8ee;
    padding: 1rem 1.3rem 1rem 1.3rem;
    background-color: transparent;
    color: var(--colour-text);
  }
  .primary:hover {
    background-color: var(--colour-accent);
    border-color: var(--colour-accent);
  }
  .secondary {
    /* border: 1px solid #c86b25; */
    width: 7.5rem;
    border-style: solid;
    border-width: 1px;
    border-color: var(--colour-accent);
    padding: 1rem 1.3rem 1rem 1.3rem;
    background-color: transparent;
    color: var(--colour-text);
  }
  .secondary:hover {
    background-color: var(--colour-accent);
  }

  @media (max-width: 600px) {
    .primary {
      padding: 11px 21px 11px 21px;
    }
    .secondary {
      padding: 11px 21px 11px 21px;
    }
  }
</style>
